{
  "name": "akila",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "PORT=3000 remix dev --manual -c \"arc sandbox -e testing\"",
    "start": "cross-env NODE_ENV=production arc sandbox",
    "typecheck": "tsc",
    "esbuild": "esbuild server/index.mjs --outfile=build/index.js --platform=node --format=cjs --bundle  '--external:crypto' '--external:aws-sdk' '--external:@aws-sdk' --allow-overwrite",
    "deploy:staging": "npm run build && npm run esbuild && ./scripts/deploy.sh staging",
    "deploy:prod": "npm run build && npm run esbuild && ./scripts/deploy.sh prod",
    "update-content:staging": "./scripts/update-content.sh staging",
    "update-content:prod": "./scripts/update-content.sh prod"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.417.0",
